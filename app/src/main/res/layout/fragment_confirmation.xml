<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="medicineVM"
            type="ie.wit.medicineapp.ui.medicineDetails.MedicineDetailsViewModel" />
        <variable
            name="groupVM"
            type="ie.wit.medicineapp.ui.group.GroupViewModel" />
        <variable
            name="reminderVM"
            type="ie.wit.medicineapp.ui.reminder.ReminderViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.confirmation.ConfirmationFragment">


        <TextView
            android:id="@+id/confirmation_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:text="Medication Due"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/reminderTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="128dp"
            android:text="@{`` + @string/formatTime(reminderVM.observableReminder.time)}"
            android:textSize="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="00:00:00" />


        <TextView
            android:id="@+id/groupName"
            android:layout_width="143dp"
            android:layout_height="40dp"
            android:layout_marginTop="28dp"
            android:text="@{groupVM.observableGroup.name}"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.865"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reminderTime"
            tools:text="group Name" />

        <TextView
            android:id="@+id/groupHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="Group:"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.248"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reminderTime" />

        <TextView
            android:id="@+id/medicationHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="Medication"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/groupName" />

        <TextView
            android:id="@+id/medicineName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:text="@{medicineVM.observableMedicine.name}"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/medicineNameHeader"
            app:layout_constraintStart_toEndOf="@+id/medicineNameHeader"
            app:layout_constraintTop_toTopOf="@+id/medicineNameHeader"
            app:layout_constraintVertical_bias="0.0"
            tools:text="medicine Name" />

        <TextView
            android:id="@+id/medicineNameHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Name:"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.264"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/medicationHeader" />

        <TextView
            android:id="@+id/medicineDosageHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="92dp"
            android:layout_marginTop="12dp"
            android:text="Dosage:"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/medicineNameHeader" />

        <TextView
            android:id="@+id/medicineDosage"
            android:layout_width="137dp"
            android:layout_height="27dp"
            android:layout_marginStart="64dp"
            android:text="@{medicineVM.observableMedicine.dosage}"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/medicineDosageHeader"
            app:layout_constraintStart_toEndOf="@+id/medicineDosageHeader"
            app:layout_constraintTop_toTopOf="@+id/medicineDosageHeader"
            app:layout_constraintVertical_bias="0.0"
            tools:text="80 MG" />

        <TextView
            android:id="@+id/medicineQuantityHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Quantity:"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.277"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/medicineDosageHeader" />

        <TextView
            android:id="@+id/medicineQuantity"
            android:layout_width="137dp"
            android:layout_height="27dp"
            android:layout_marginStart="60dp"
            android:text="@{`` + medicineVM.observableMedicine.quantity}"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/medicineQuantityHeader"
            app:layout_constraintStart_toEndOf="@+id/medicineQuantityHeader"
            app:layout_constraintTop_toTopOf="@+id/medicineQuantityHeader"
            app:layout_constraintVertical_bias="0.0"
            tools:text="100" />

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm"
            app:layout_constraintBottom_toBottomOf="@+id/btn_snooze"
            app:layout_constraintEnd_toStartOf="@+id/btn_snooze"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/medicineQuantityHeader"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/btn_snooze"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="124dp"
            android:text="Snooze"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btn_confirm"
            app:layout_constraintTop_toBottomOf="@+id/medicineQuantity"
            app:layout_constraintVertical_bias="0.578" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>