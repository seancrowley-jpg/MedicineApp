<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="medicineVM"
            type="ie.wit.medicineapp.ui.medicineDetails.MedicineDetailsViewModel" />
        <variable
            name="groupVM"
            type="ie.wit.medicineapp.ui.group.GroupViewModel" />
        <variable
            name="reminderVM"
            type="ie.wit.medicineapp.ui.reminder.ReminderViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <DatePicker
                android:id="@+id/datePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="81dp"
                android:layout_marginTop="63dp"
                android:layout_marginEnd="82dp"
                android:layout_marginBottom="497dp"
                android:calendarViewShown="false"
                android:datePickerMode="spinner"
                android:day="@{reminderVM.observableReminder.day}"
                android:month="@{reminderVM.observableReminder.month}"
                android:year="@{reminderVM.observableReminder.year}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/medicineId"
                android:layout_width="127dp"
                android:layout_height="47dp"
                android:layout_marginTop="517dp"
                android:layout_marginEnd="18dp"
                android:layout_marginBottom="211dp"
                android:text="@{medicineVM.observableMedicine.name}"
                android:textSize="25sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btnAddMed"
                app:layout_constraintHorizontal_bias="0.939"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="MedicineID" />

            <TimePicker
                android:id="@+id/timePicker"
                android:layout_width="245dp"
                android:layout_height="215dp"
                android:layout_marginStart="77dp"
                android:layout_marginTop="290dp"
                android:layout_marginEnd="78dp"
                android:layout_marginBottom="270dp"
                android:hour="@{reminderVM.observableReminder.hour}"
                android:minute="@{reminderVM.observableReminder.minute}"
                android:timePickerMode="spinner"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </TimePicker>

            <Button
                android:id="@+id/btnAddMed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="227dp"
                android:layout_marginTop="516dp"
                android:layout_marginEnd="82dp"
                android:layout_marginBottom="208dp"
                android:text="Add Med"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/repeat"
                android:layout_width="127dp"
                android:layout_height="47dp"
                android:layout_marginStart="82dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="20dp"
                android:textSize="25sp"
                android:text="Repeat"
                app:layout_constraintEnd_toStartOf="@+id/btn_repeat"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/medicineId" />

            <Button
                android:id="@+id/btn_repeat"
                android:layout_width="90dp"
                android:layout_height="52dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="92dp"
                app:icon="@android:drawable/ic_input_add"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnAddMed" />

            <Button
                android:id="@+id/btn_set_reminder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="132dp"
                android:layout_marginEnd="132dp"
                android:layout_marginBottom="76dp"
                android:text="Add Reminder"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>