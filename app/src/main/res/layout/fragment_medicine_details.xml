<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="medicineVM"
            type="ie.wit.medicineapp.ui.medicineDetails.MedicineDetailsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.viewRecipe.ViewRecipeFragment">


        <TextView
            android:id="@+id/medicine_details_name"
            android:layout_width="360dp"
            android:layout_height="46dp"
            android:layout_marginTop="28dp"
            android:autoSizeTextType="uniform"
            android:text="@{medicineVM.observableMedicine.name}"
            android:textSize="35sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.406"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Medicine Name" />

        <TextView
            android:id="@+id/medicine_details_quantity"
            android:layout_width="189dp"
            android:layout_height="48dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="96dp"
            android:autoSizeTextType="uniform"
            android:textSize="20sp"
            android:text="@string/medicine_details_quantity"
            app:layout_constraintEnd_toStartOf="@+id/medicine_details_quantity_num"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/medicine_details_name"
            />

        <TextView
            android:id="@+id/medicine_details_quantity_num"
            android:layout_width="84dp"
            android:layout_height="48dp"
            android:layout_marginTop="40dp"
            android:autoSizeTextType="uniform"
            android:textSize="20sp"
            android:text="@{`` + medicineVM.observableMedicine.quantity}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.951"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/medicine_details_name"
            tools:text="200" />

        <TextView
            android:id="@+id/medicine_details_dosage"
            android:layout_width="189dp"
            android:layout_height="48dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="96dp"
            android:autoSizeTextType="uniform"
            android:textSize="20sp"
            android:text="@string/medicine_details_dosage"
            app:layout_constraintEnd_toStartOf="@+id/medicine_details_quantity_num"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/medicine_details_quantity"
            />

        <TextView
            android:id="@+id/medicine_details_dosage_num"
            android:layout_width="84dp"
            android:layout_height="48dp"
            android:layout_marginTop="40dp"
            android:autoSizeTextType="uniform"
            android:textSize="20sp"
            android:text="@{medicineVM.observableMedicine.dosage}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.951"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/medicine_details_quantity"
            tools:text="200" />

        <TextView
            android:id="@+id/medicine_details_reminder_limit"
            android:layout_width="189dp"
            android:layout_height="48dp"
            android:layout_marginTop="128dp"
            android:layout_marginEnd="96dp"
            android:autoSizeTextType="uniform"
            android:text="@string/medicine_details_reminder_limit"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/medicine_details_reminder_limit_num"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/medicine_details_quantity" />

        <TextView
            android:id="@+id/medicine_details_reminder_limit_num"
            android:layout_width="84dp"
            android:layout_height="48dp"
            android:layout_marginTop="128dp"
            android:autoSizeTextType="uniform"
            android:text="@{`` + medicineVM.observableMedicine.reminderLimit}"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.951"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/medicine_details_quantity_num"
            tools:text="200" />

        <TextView
            android:id="@+id/medicine_details_usage_dir_header"
            android:layout_width="377dp"
            android:layout_height="57dp"
            android:layout_marginTop="40dp"
            android:autoSizeTextType="uniform"
            android:textSize="35sp"
            android:text="@string/medicine_details_usage_directions"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/medicine_details_reminder_limit"
            />

        <TextView
            android:id="@+id/medicine_details_usage_dir"
            android:layout_width="377dp"
            android:layout_height="57dp"
            android:layout_marginTop="10dp"
            android:autoSizeTextType="uniform"
            android:textSize="11sp"
            android:text="@{medicineVM.observableMedicine.usageDir}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/medicine_details_usage_dir_header"
            app:layout_constraintVertical_bias="0.066"
            tools:text="Usage Directions" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>